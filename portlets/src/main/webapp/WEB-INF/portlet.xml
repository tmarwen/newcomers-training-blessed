<?xml version="1.0" encoding="UTF-8"?>

<portlet-app
    xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd"
    version="1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd
                        http://java.sun.com/xml/ns/portlet/portlet-app_1_0.xsd">

    <portlet>
        <description>EventsPortlet</description>
        <portlet-name>EventsPortlet</portlet-name>
        <display-name>Newcomers Training Portlet</display-name>

        <portlet-class>org.exoplatform.support.EventsPortlet</portlet-class>

        <supports>
            <mime-type>text/html</mime-type>
            <portlet-mode>VIEW</portlet-mode>
        </supports>

        <supported-locale>en</supported-locale>

        <portlet-info>
            <title>Events Portlet</title>
            <short-title>Events Portlet</short-title>
            <keywords>events newcomer</keywords>
        </portlet-info>
    </portlet>

</portlet-app>
